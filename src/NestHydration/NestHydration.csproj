<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <authors>Umbraco HQ</authors>
        <owners>Umbraco HQ</owners>
        <Description>.NETStandard library for converting tabular data into a nested object/array structure based on a definition object</Description>
        <Copyright>2020</Copyright>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <language>en-US</language>
        <tags>graphql,join-monster,nested objects,hydration</tags>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageProjectUrl>https://github.com/umbraco/nest-hydration-dotnet</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/umbraco/nest-hydration-dotnet</RepositoryUrl>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>NestHydration</RootNamespace>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <DocumentationFile>bin\$(Configuration)\NestHydration.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../../LICENSE.md" Pack="true" Visible="false" PackagePath="$(PackageLicenseFile)" />
    </ItemGroup>

</Project>
